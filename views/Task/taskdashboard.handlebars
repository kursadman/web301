<h2>Task Dashboard</h2>
 
 <section class="tasks-container">
   

     <form method="POST" action="/task/search">
        <label>Search By</label>
        <select name="task-search">
                <option value="best">Best Seller</option>
                <option value="notbest">Regular</option>
              
        </select>
        <input type="submit" value="Search">
     </form> <br><br>

    <table border="1" style="text-align: center;">
        <thead>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Status</th>
                <th>picture</th>
                <th>Operation</th>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                   <td>
                        <a href="" class="task-title">{{this.name}}</a>
                   </td>
                   <td>
                       <span>{{this.description}}</span>
                      
                   </td>
                   <td>
                        <span>{{this.category}}</span>
                   </td>
                   <td>
                       <span>{{this.quantity}}</span>
                   </td>

                   <td>
                       <span>{{this.price}}</span>
                   </td>
                   <td>
                       <span>{{this.status}}</span>
                   </td>
                   <td>
                       <span>{{this.picture}}</span>
                   </td>
                   <td>
                        <a href="/task/edit/{{this.id}}" class="edit-delete-button">Edit</a>
                        <a href="/task/delete/{{this.id}}?method=DELETE" class="edit-delete-button">Delete</a>
                   </td> 
                </tr>

                {{else}}
                    <td colspan="5">
                        <p>No item in the database</p>
                    </td>

                {{/each}}
    </tbody>
    </table>
 
</section>

<div id="tasks-links-holder">
    <a href="/task/add">Add a Item</a>
</div>

