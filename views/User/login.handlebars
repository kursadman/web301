

<link rel="stylesheet" href="/css/sign.css">
<div class="wrapper fadeInDown">
  <div id="formContent">
     
    <h2 class="active"> <a href="/user/sign">Sign In</a> </h2>
    <h2 class="inactive underlineHover"><a href="/user/register">Sign Up</a></h2>

    {{#each errors}}
      <p>{{this}}</p>
     {{/each}}
    <form method="POST" action="/user/login">
      <input type="text" id="email" class="fadeIn second" name="email" placeholder="Enter your email">
      {{#if this.first_n}} <br><span class="errorMessage" style="color: red;">{{this.first_n}}</span> {{/if}}
      <input type="text" id="password" class="fadeIn third" name="password" placeholder="Enter your password">
      {{#if this.p_pass}} <br><span class="errorMessage" style="color: red;">{{this.p_pass}}</span> {{/if}}
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>


    <a class="backHome" href="/">Go to home</a>

    
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>


