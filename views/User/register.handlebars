
<link rel="stylesheet" href="/css/sign.css">

<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> <a href="/user/login">Sign In</a> </h2>
    <h2 class="inactive underlineHover"><a href="/user/register">Sign Up</a></h2>

    <!-- Login Form -->
   <form method="POST" action="/user/register" enctype="multipart/form-data">
      <input type="text" id="name" class="fadeIn second" name="firstName" placeholder="First mame">
      {{#if this.first_n}} <br><span class="errorMessage" style="color: red;">{{this.first_n}}</span> {{/if}}
      <input type="text" id="name" class="fadeIn second" name="lastName" placeholder="Last name">
      {{#if this.last_n}} <br><span class="errorMessage" style="color: red;">{{this.last_n}}</span> {{/if}}
      <input type="text" id="email" class="fadeIn second" name="email" placeholder="Email">
      {{#if this.mailL}} <br><span class="errorMessage" style="color: red;">{{this.mailL}}</span> {{/if}}
      <input type="text" id="password" class="fadeIn second" name="password" placeholder="Password">
      {{#if this.p_pass}} <br><span class="errorMessage" style="color: red;">{{this.p_pass}}</span> {{/if}}
      <input type="file" id="name" class="fadeIn second" name="profilePic">
      <input type="submit" class="fadeIn fourth" value="Register">
    </form>
    
    <a class="backHome" href="/">Go to home</a>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <a class="underlineHover" href="#">Forgot Password?</a>
    </div>

  </div>
</div>